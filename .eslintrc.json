{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "ignorePatterns": ["dist/**", "webpack.config.js"],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": 0,
        "no-func-assign": 0,
        "no-unused-vars": 0,
        "no-empty": 0,
        "no-unsafe-finally": 0
    }
}